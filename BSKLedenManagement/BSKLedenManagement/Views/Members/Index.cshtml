@model IEnumerable<BSKLedenManagement.Models.Member>

@{
    ViewBag.Title = "Overzicht leden";
}

<h2>Ledenlijst</h2>



@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Nieuw lid", "Create", "", new { @class = "btn btn-success" })
        @Html.ActionLink("Backup downloaden", "Backup", "", new { @class = "btn btn-warning" })
        @Html.TextBox("search", null, new { @style = "width: 100%;height: 38px;padding: 7px 12px;font-size: 14px;line-height: 1.42857143; color: #555555;border: 1px solid #e7e7e7;border-radius: 4px;"})
      
        <input type="submit" value="Search" class="btn btn-info" />
    </p>
}

<table class="table table-striped">
    <tr>
        <th>
            @Html.ActionLink("Voornaam", "Index", new { sortOrder = ViewBag.FirstnameSortParm })
        </th>
        <th>
            Achternaam
        </th>
        <th>
            @Html.ActionLink("Kring", "Index", new { sortOrder = ViewBag.KringSortParm })
        </th>
        <th>
            @Html.ActionLink("Registratiedatum", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            Adres
        </th>
        <th>
            Email
        </th>
        <th>
            GSM
        </th>
        <th>
            Is Actief
        </th>
        <th>Verzekering</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verzekering)
            </td>
            <td>
                @Html.ActionLink("Bewerken", "Edit", new { id = item.Id })
                @Html.ActionLink("X", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
