@model IEnumerable<BSKLedenManagement.Models.BeheerdersEmail>

@{
    ViewBag.Title = "Index";
}

<h2>Beheerders Emails</h2>
<h4>De emailadressen uit deze lijst worden gebruikt om notificaties naar te sturen in geval van nieuwe registraties.</h4>
<p>
    @Html.ActionLink("Mijn emailadres toevoegen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            @Html.ActionLink("X", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
